@model MyCrud.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    <p>Price</p>
                </th>
                <th>
                    <p>Name</p>
                </th>
                <th>
                    <p>Image</p>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

                <tr>
                    <td>
                       @Model.Name
                    </td>
                    <td>
                       @Model.Price
                    </td>
                    <td>
                        <img src="~/images/@Model.ImageName"
                             class=""
                             height="80" width="80"
                             asp-append-version="true" />
                    </td>
                </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
